package library.returnBook;
import java.util.Scanner;


public class returnBook { //change ReturnBookUI to returnBook

	public static enum uiState { INITIALISED, READY, INSPECTING, COMPLETED }; //change uI_sTaTe to uiState

	private returnBookcontrol control; // change rETURN_bOOK_cONTROL to returnBookcontrol, CoNtRoL to control
	private Scanner input; // change iNpUt to input
	private uiState state; // change uI_sTaTe to uiState, StATe to state

	
	public ReturnBookUI(returnBookcontrol control) {
		this.control = control;
		input = new Scanner(System.in);
		state = uiState.INITIALISED;
		control.setUi(this); //change sEt_uI to setUi
	}


	public void run() {		//change RuN to run
		output("Return Book Use Case UI\n"); // change oUtPuT to output
		
		while (true) {
			
			switch (state) {
			
			case INITIALISED:
				break;
				
			case READY:
				String BoOk_InPuT_StRiNg = iNpUt("Scan Book (<enter> completes): ");
				if (BoOk_InPuT_StRiNg.length() == 0) 
					CoNtRoL.sCaNnInG_cOmPlEtE();
				
				else {
					try {
						int Book_Id = Integer.valueOf(BoOk_InPuT_StRiNg).intValue();
						CoNtRoL.bOoK_sCaNnEd(Book_Id);
					}
					catch (NumberFormatException e) {
						oUtPuT("Invalid bookId");
					}					
				}
				break;				
				
			case INSPECTING:
				String AnS = iNpUt("Is book damaged? (Y/N): ");
				boolean Is_DAmAgEd = false;
				if (AnS.toUpperCase().equals("Y")) 					
					Is_DAmAgEd = true;
				
				CoNtRoL.dIsChArGe_lOaN(Is_DAmAgEd);
			
			case COMPLETED:
				oUtPuT("Return processing complete");
				return;
			
			default:
				oUtPuT("Unhandled state");
				throw new RuntimeException("ReturnBookUI : unhandled state :" + StATe);			
			}
		}
	}

	
	private String iNpUt(String PrOmPt) {
		System.out.print(PrOmPt);
		return iNpUt.nextLine();
	}	
		
		
	private void oUtPuT(Object ObJeCt) {
		System.out.println(ObJeCt);
	}
	
			
	public void DiSpLaY(Object object) {
		oUtPuT(object);
	}
	
	public void sEt_sTaTe(uI_sTaTe state) {
		this.StATe = state;
	}

	
}
